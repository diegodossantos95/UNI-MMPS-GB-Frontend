<mvc:View
		controllerName="com.diegodossantos95.MMPSFrontend.controller.Detail"
		xmlns:mvc="sap.ui.core.mvc"
	    xmlns:form="sap.ui.layout.form"
		displayBlock="true"
		xmlns="sap.m">
    <Page id="detailPage" title="Details">
        <content>
            <form:SimpleForm editable="true">
                <form:content>
                    <Label text="Sigla"/>
                    <Input value="{Detail>/sigla}" visible="{path: 'Detail>/sigla', formatter:'.formatter.isAvailable'}"/>
                    
                    <Label text="Name"/>
                    <Input value="{Detail>/name}"/>
                    
                    <Label text="Description"/>
                    <Input value="{Detail>/description}" visible="{path: 'Detail>/description', formatter:'.formatter.isAvailable'}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Cancel" press="onCancelPress"/>
                <Button text="Save" press="onSavePress"/>
			</Toolbar>
		</footer>
    </Page>
</mvc:View>
